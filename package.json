    "@types/react-router-dom": "^5.3.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mongoose": "^8.18.2",
    "typescript": "^5.8.3",
    "@types/express": "^5.0.3",
    "@types/node": "^24.6.0"
  },
